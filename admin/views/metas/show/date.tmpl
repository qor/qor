<div class="qor-field">
  <div class="mdl-textfield mdl-textfield--full-width mdl-js-textfield qor-textfield--static-label">
    <input class="mdl-textfield__input hidden" type="text" id="{{.InputId}}" data-toggle="qor.datepicker" name="{{.InputName}}"
    value="{{if .Value}}{{if not .Value.IsZero}}value="{{.Value.Format "2006-01-02"}}"{{end}}{{end}}" {{if not (has_update_permission .Meta)}} disabled{{end}}>

    <label class="mdl-textfield__label" for="{{.InputId}}">{{meta_label .Meta}}</label>
    <span class="qor-field__value">{{if .Value}}{{if not .Value.IsZero}}{{.Value.Format "2006-01-02"}}{{end}}{{end}}</span>
  </div>
</div>
