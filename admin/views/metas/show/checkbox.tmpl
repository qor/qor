<div class="qor-field">
  <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="{{.InputId}}">
    <input type="checkbox" id="{{.InputId}}" name="{{.InputName}}" class="mdl-checkbox__input hidden" value="true" type="checkbox" {{if .Value}}checked{{end}} {{if not (has_update_permission .Meta)}}disabled{{end}}>
    <input type="hidden" name="{{.InputName}}" value="false">

    <label class="mdl-textfield__label" for="{{.InputId}}">{{meta_label .Meta}}</label>
    <span>{{.Value}}</span>
  </label>
</div>
