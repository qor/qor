<div class="qor-field">
  <div class="mdl-textfield mdl-textfield--full-width mdl-js-textfield qor-textfield--static-label">
    <textarea class="mdl-textfield__input qor-js-autoheight hidden" id="{{.InputId}}" name="{{.InputName}}" rows="1" {{if not (has_update_permission .Meta)}}disabled{{end}}>{{if .Value}}{{.Value}}{{end}}</textarea>

    <label class="mdl-textfield__label" for="{{.InputId}}">{{dt (printf "%v.attributes.%v" .BaseResource.ToParam .Label) .Label}}</label>
    <div class="qor-field__value">
      {{.Value}}
    </div>
  </div>
</div>
